    int tam=n.length(),multiplicador=1,decimal=0;
    string text;
    for(int i=0;i<tam/8;i++){
        //multiplicador;
        //decimal;
        for(int j=0,palbin=(i+1)*8-1;j<8;j++,palbin--){
            if(n[palbin]=='1'){
                decimal+=multiplicador;
            }
            multiplicador=multiplicador*2;
        }
        text+=decimal;
    }
return text;
}

